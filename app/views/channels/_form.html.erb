<%= form_with model: @channel, class: "channels__form", local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  
  <%= f.hidden_field :user_id, value: $current_user.id %>
  <%= f.submit %>
<% end %>
