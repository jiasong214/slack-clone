<section class="channels">
  <%= render partial: 'header', locals: {title: @channel.name} %>
  <div>
    <p>Description</p>
    <p><%= @channel.description %></p>
  </div>
  <div>
    <p>Created by</p>
    <p><%= $all_users.find(@channel.user_id).username %></p>
  </div>
  <div>
    <% if $current_user.id != @channel.user_id %>
      <p>Leave Channel</p>
    <% else %>
      <%= link_to "Edit", edit_channel_path(@channel.id) %>
      <%= link_to "Delete", channel_path(@channel.id), method: 'delete' %>
    <% end %>
  </div>

</section>
