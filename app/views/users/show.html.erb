<%= render :layout => './shared/template' do %>
  <section class="users">
    <%= render partial: 'header', locals: {title: "Profile"} %>

    <div class="users__profile">
      <div class="img-container">
      <%= cl_image_tag @current_user.image, alt: "user image" %>
      </div>
      <h2 class="username"><%= @current_user.username %></h2>
      <p class="title"><%= @current_user.title %></p>
      <a href="<%= edit_user_path @current_user.id %>" class="editBtn">
        <i><img src="/assets/edit-icon.png" alt="edit icon"></i>
        <span>Edit profile</span>
      </a>
      <div class="profile-innerbox">
        <div>
          <p>Display name</p>
          <p class="displayName"><%= @current_user.username %></p>
        </div>
        <div>
          <p>Local time</p>
          <p>asdfsdf</p>
        </div>
        <div>
          <p>Email address</p>
          <p class="email"><%= @current_user.email %></p>
        </div>
      </div>
      <div class="option-container">
        <%= link_to "Logout", login_path, method: 'delete', class: "btn" %>
        <%= link_to "Delete the account", user_path, method: 'delete', class: "btn" %>
      </div>
    </div>
  </section>
<% end %>
