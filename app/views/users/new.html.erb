<section class="signin">
  <div class="signin__title">
    <h1>
      <img src="/assets/slack-logo.png" alt="logo">
      slack
    </h1>
    <h2>Sign up to Slack</h2>
    <p>Continue with email address you use to sign up.</p>
  </div>
  <div class="signin__form-container">

    <% if @user.errors.any? %>
      <p class="error-msg"><%=@user.errors.full_messages[0] %></p>
    <% end %>

    <%= form_with model: @user, class: "form", local: true do |f| %>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Email address", required: true %>
      </div>
      <div>
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "Username", required: true %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password", required: true %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm password", required: true  %>
      </div>
      <%= f.submit "Signup", class: "btn" %>
    <% end %>
  </div>

  <div class="signin__new">
    <p>Already has account?</p>
    <%= link_to "Signin", login_path %>
  </div>
</section>
