<aside class="workplace__sidebar">
  <h1 class="sidebar__title">
    <%= link_to "GA Immersive Students", root_path, class: "ellip-text" %>
  </h1>
  <div class="sidebar-scrollContainer">
    <details open class="sidebar__channels">
      <summary>Channels</summary>
      <ul>
        <% @all_channels.each do |c| %>
          <li class="<%= params[:channel_id].to_i == c.id ? "active" : "" %>">
           <%= link_to chats_path(c.id) do %>
              <i> 
                <%= c.private ? image_tag('/assets/lock-icon.svg') : '#' %>
              </i>
              <span class="ellip-text"> <%= c.name %> </span>
            <% end %>
          </li>
        <% end %>
        <li class="channels__option">
          <a href="<%= channels_path %>">
            <i> + </i>
            <span class="ellip-text">Browse channels</span>
          </a>
        </li>
        <li class="channels__option">
          <a href="<%= new_channel_path %>">
            <i> + </i>
            <span class="ellip-text">Create a channel</span>
          </a>
        </li>
      </ul>
    </details>
    <details open class="sidebar__DMs">
      <summary class="ellip-text">Direct Messages</summary>
      <ul>
        <% @all_DMs.each_with_index do |c, index| %>
          <% if index < 10 %>
            <li class="<%= params[:user_id].to_i == c.id ? "active" : "" %>">
              <a href="<%= dms_path c.id %>">
                <i class="img-container">
                  <img src="<%= c.image %>" alt="" />
                </i>
                <span class="ellip-text"> <%= c.username %> </span>
              </a>
            </li>
          <% end %>
        <% end %>
        <li class="channels__option">
          <%= link_to users_path do %>
            <i> + </i>
            <span class="ellip-text">Add teammates</span>
          <% end %>
        </li>
      </ul>
    </details>
  </div>
</aside>